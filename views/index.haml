#stage
  %img{:src => "/images/fewsel.jpg"}

#leftcol
  %h1= "fewsel status updates"
  - posts.each do |post|
    #news
      #newsdate  
        %p.published_at
          %time{ :pubdate => "pubdate", :datetime => post.upated_at.iso8601 }= I18n.l(post.upated_at, :format => :short)
      #newscontent
        %p.news= nl2br(linkify post.message)
#rightcol
  %h1= "like us on facebook"
